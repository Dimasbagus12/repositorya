<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BFDAEF"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="419dp"
        android:layout_height="256dp"
        android:layout_gravity="center"
        android:src="@drawable/nurul" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#093B51"
        android:padding="20dp"
        android:textAlignment="center"
        android:text="Masjid Nurul Yaqin"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#FFFFFF"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Lokasi: Jalan Kampung Bayur RT 003 / RW 04 Periuk Jaya, Kecamatan Periuk, Kota Tangerang."
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="16dp" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="338dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Masjid Nurul Yaqin atau dikenal masyarakat sekitar dengan julukan Masjid Pintu Seribu adalah salah satu tempat ikonik di Tangerang yang menawarkan wisata religi  bagi para pelancong yang ingin mendapat kesejukan spiritual. masjid tersebut memiliki banyak pintu yang tidak diketahui secara persis berapa pintu yang terdapat dalam masjid tersebut, reporter SeputarTangsel.com mengunjungi tempat tersebut, seorang pengelola menyebut masjid Pintu Seribu sebenarnya memiliki 999 pintu namun digenapkan menjadi 1000."
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="20dp" />

    </ScrollView>

</LinearLayout>